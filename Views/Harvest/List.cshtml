@model List<HarvestItem>
@{
    ViewData["Title"] = "Harvest List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Harvest List</h2>

<!-- this code here is for the fiter form , my code with AI editing-->
<div class="card">
    <form method="get">
        <div class="filterrow">

          <div class="filter-item">
               <label>Category:</label>
               <input name="category" />
          </div>

           <div class="filter-item ">
                    <label>Start Date:</label>
                    <inpu type="date" name="startDate" />
           </div>

                        <div class="filter-item">
              <label>End Date:</label>
              <input type="date" name="endDate" />
                        </div>

            <button type="submit">Filter</button>
        </div>
    </form>
</div>

<!-- this is the tabke for results, my code with AI editing -->
<table>
    <thead>
        <tr>
           <th>Item</th>
                <th>Category</th>
                <th>Date</th>
           <th>Grower</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

               <td>@item.ItemName</td>
                    <td><span class="category tag">@item.Category</span></td>
                    <td>@item.HarvestDate.ToShortDateString()</td>
               <td>@item.Grower.FullName</td>

            </tr>
        }
    </tbody>
</table>




